<%- include('../partials/header', {title: 'Seller Dashboard'}) %>
<%- include('../partials/navbar', {categories}) %>

<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-md-12">
            <h1>Seller Dashboard</h1>
            <a href="/seller/add" class="btn btn-success mb-3">Add Product</a>
        </div>
    </div>

    <% if (success_msg && success_msg.length > 0) { %>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-success"><%= success_msg %></div>
            </div>
        </div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <ul>
                        <% error_msg.forEach(msg => { %>
                            <li><%= msg %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Categories</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(el => { %>
                        <tr>
                            <td><%= el.id %></td>
                            <td><%= el.name %></td>
                            <td><%= el.price.toLocaleString('id-ID', { style: 'currency', currency: 'IDR') %></td>
                            <td><%= el.stock %></td>
                            <td><%= el.Categories.map(c => c.name).join(', ') %></td>
                            <td>
                                <a href="/seller/edit/<%= el.id %>" class="btn btn-primary btn-sm">Edit</a>
                                <a href="/seller/delete/<%= el.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>