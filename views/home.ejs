<%- include('./partials/header', {title: 'Ecommerce'}) %>
<%- include('./partials/navbar', {categories}) %>

<div class="container-fluid">
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-success"><%= success_msg %></div>
            </div>
        </div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <ul>
                        <% error_msg.forEach(msg => { %>
                            <li><%= msg %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-6 g-4 mt-4">
        <% products.forEach(el => { %>

            <div class="col">
                <div class="card h-100">
                    <img src="<%= el.imgUrl %>" class="card-img-top" alt="<%= el.name %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= el.name %></h5>
                        <p class="card-text text-success fw-bold"><i class="bi bi-tag"></i> Rp <%= el.formatPrice %></p>
                        <p class="card-text"><i class="bi bi-shop"></i> <%= el.User.UserDetail && el.User.UserDetail.name ? el.User.UserDetail.name : '' %></p>
                        <a href="/add-to-cart/<%= el.id %>" class="btn btn-outline-primary mt-auto">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </a>
                    </div>
                </div>
            </div>

        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>